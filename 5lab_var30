#include <stdio.h>

int main() {
    int A[] = {3, 2, 8, 1, -14}; // исходный массив A
    int n = 5; // количество элементов в массиве
    int k, s, i; // переменные для цикла
    
    // инициализация переменных k и s
    k = 0;
    s = 0;
    
    // суммирование элементов массива A, пока не встретится отрицательное число
    for (i = 0; i < n && k == 0; i++) {
        if (A[i] < 0) {
            k = 1;
        }
        s = s + A[i];
    }
    
    // вывод суммы элементов массива и k (k=0 - отрицательного числа нет,k=1 - отрицательное число есть)
    printf("Сумма элементов массива: %d\n", s);
    printf("k: %d\n", k);
    
    return 0;
}
