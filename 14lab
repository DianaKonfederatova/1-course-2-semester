#include <stdio.h>
#include <string.h>

int main() {
    FILE *file;//указатель на файл
    char *filename = "1.txt";  // указатель на массив

    // Открытие файла для чтения
    file = fopen(filename, "r");//откр-fopen r-читает
    if (file == NULL) {//проверка, удалось ли откр. файл
        printf("Ошибка открытия файла.\n");
        return 1;//если не получилось откр.
    }

    // Чтение строк из файла и подсчет символов
    char line[512];  //Объявление массива символов line размером 512 элементов. Он будет использоваться для хранения каждой строки из файла.
    while (fgets(line, sizeof(line), file)) {//fgets-чтение строк из файла и сохраняет в массив line; sizeof-унарный оператор
        int length = strlen(line);//strlen-возвращает длину строки; присваивает переменной length длину строки line
        // if (line[length - 1] == '\n') {//Проверка, заканчивается ли строка символом переноса строки
        //     length--;  // Игнорируем символ переноса строки '\n' при подсчете
        // }
        // if (line[length - 1] == '\r') {//проверка на наличие символа возврата каретки '\r' 
        //     length--; //Игнорируем символ возврата каретки при подсчете
        // }
        printf("Длина строки: %d символов\n", length);
    }

    // Функция закрытие файла
    fclose(file);

    return 0;
}
