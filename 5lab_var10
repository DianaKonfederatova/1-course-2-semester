#include <stdio.h>

int main() {
    int A[] = {3, 5, 2, 8, 1}; // исходный массив
    int n = 5; // количество элементов в массиве
    int i, j, k; //переменные 
    
    // поиск максимального элемента в массиве A
    for (i = 1, k = 0; i < n; i++) {
        if (A[i] > A[k]) { 
            k = i;
        }
    }
    
    // сдвиг всех элементов после элемента с индексом k влево на один
    for (j = k; j < n - 1; j++) {
        A[j] = A[j + 1];
    }
    
    n--; // уменьшение количества элементов в массиве
    
    // вывод массива после удаления элемента с максимальным значением
    for (i = 0; i < n; i++) {
        printf("%d ", A[i]);
    }
    
    return 0;
}
